
{
  "expo": {
    "name": "Ultimate Pocket Guide to America",
    "slug": "ultimate-pocket-guide-to-america",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-1024x1024.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.amateurxhuman.ultimatepocketguidetoamerica",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [],
        "UIRequiredDeviceCapabilities": ["arm64"],
        "NSCameraUsageDescription": "This app does not use the camera.",
        "NSPhotoLibraryUsageDescription": "This app does not access your photo library.",
        "NSLocationWhenInUseUsageDescription": "This app does not use location services.",
        "NSMicrophoneUsageDescription": "This app does not use the microphone.",
        "CFBundleDevelopmentRegion": "en",
        "CFBundleDisplayName": "Pocket Guide"
      },
      "entitlements": {
        "com.apple.developer.networking.multicast": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-maskable-512x512.png",
        "backgroundColor": "#0F0F0F"
      },
      "package": "com.amateurxhuman.ultimatepocketguidetoamerica",
      "versionCode": 1,
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true,
      "permissions": []
    },
    "web": {
      "favicon": "./assets/images/favicon.ico",
      "bundler": "metro",
      "output": "static",
      "meta": {
        "theme_color": "#D4AF37",
        "apple-mobile-web-app-capable": "yes",
        "apple-mobile-web-app-status-bar-style": "black-translucent"
      }
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-haptics",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#0F0F0F"
        }
      ],
      [
        "expo-updates",
        {
          "enabled": true
        }
      ]
    ],
    "scheme": "pocketguide",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id-here"
      }
    },
    "owner": "amateurxhuman",
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0F0F"
    },
    "description": "A beautiful, offline-first civic education app exploring American history, government, and values.",
    "githubUrl": "https://github.com/amateurxhuman/ultimate-pocket-guide-to-america",
    "orientation": "portrait",
    "primaryColor": "#D4AF37"
  }
}
