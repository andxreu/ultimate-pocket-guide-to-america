{
  "expo": {
    "name": "Ultimate Pocket Guide to America",
    "slug": "Ultimate Pocket Guide to America",
    "version": "1.0.0",
    "orientation": "portrait",

    // üî• REMOTE APP ICON
    "icon": "https://thehumanconservative.com/wp-content/uploads/2025/11/Icon.png",

    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "splash": {
      // üî• USE SAME ICON FOR SPLASH (optional, but safe)
      "image": "https://thehumanconservative.com/wp-content/uploads/2025/11/Icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },

   "ios": {
  "supportsTablet": true,
  "bundleIdentifier": "com.amateurxhuman.ultimatepocketguidetoamerica",
  "infoPlist": {
    "ITSAppUsesNonExemptEncryption": false,

    // üö´ Explicitly say: ‚Äúno special hardware required‚Äù
    "UIRequiredDeviceCapabilities": []
  }
},

    "android": {
      "adaptiveIcon": {
        // üî• ADAPTIVE ICON FOR ANDROID
        "foregroundImage": "https://thehumanconservative.com/wp-content/uploads/2025/11/Icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.amateurxhuman.ultimatepocketguidetoamerica",
      "permissions": []
    },

    "web": {
      "favicon": "./assets/images/final_quest_240x240.png",
      "bundler": "metro"
    },

    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser"
    ],

    "scheme": "ultimate-pocket-guide-to-america",

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {}
    }
  },

  "scheme": "Ultimate Pocket Guide to America"
}
